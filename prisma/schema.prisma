generator client {
  provider = "prisma-client"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model User {
  id          String   @id @default(uuid())
  clerkUserId String   @unique //clerk user id
  email       String   @unique
  name        String?
  imageUrl    String?
  industry    String? // cpmbined industry-subindustry (e.g.
  tech-sofrware-developement)
  IndustryInsights IndustryInsights? @relation(fields: [industry], reference; [industry])
  createdAt   DataTime @default(now())
  updatedAt   DataTime @updatedAt

  //profile fields

  bio        String?
  experience Int? //Years of experience
  skills     string[] //array of skills
}

model IndustryInsights {
}
